<%= form_for [location, listing] do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %><br>

  <%= f.label :description %><br>
  <%= f.text_area :description, cols: 100, rows: 15 %><br>

  <%= f.label :price %>
  <%= f.number_field :price %><br>

  <%= f.label :category %>
  <%= f.collection_select :category_id, categories, :id, :name %><br>

  <%= render_edit_post_checkboxes(location, listing, f) %>
  <%= render_image_post_checkboxes(location, listing, f) %>

  <%= f.label :listing_images, "Add Image URLs:" %>
  <%= f.fields_for :listing_images, listing.listing_images do |listing_image_fields| %>
    <%= listing_images_attributes_field(listing_image_fields) %>
  <% end %> <br>

  <%= f.label :tags, "Add New Tags:" %>
  <%= f.fields_for :tags, listing.tags do |tag_fields| %>
    <%= tag_attributes_field(tag_fields) %>
  <% end %> <br>

  <%= f.hidden_field :location_id, :value => location.id %>

  <%= submit_tag :submit%>

<% end %>
