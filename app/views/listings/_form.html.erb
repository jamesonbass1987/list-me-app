<%= form_for  [listing.location, listing] do |f| %>
  <%= form_errors_check(listing) %>

  <%= f.label :title %>
  <%= f.text_field :title %><br>

  <%= f.label :description %><br>
  <%= f.text_area :description, cols: 100, rows: 15 %><br>

  <%= f.label :price %>
  <%= f.number_field :price, :step => 0.01 %><br>

  <%= f.label :category %>
  <%= f.collection_select :category_id, @categories, :id, :name %><br>

  <%= f.label :listing_images, "Add Or Edit Image URLs:" %><br>
  <%= f.fields_for :listing_images, 5.times{listing.listing_images.build} do |listing_images_fields| %>
    <%= listing_images_fields.text_field :image_url %>
  <% end %> <br>

  <%= f.label :tags, "Add or Edit Tags:" %><br>
  <%= f.fields_for :tags, 5.times{listing.tags.build} do |tag_fields| %>
    <%= tag_fields.text_field :name %>
  <% end %> <br>

  <%= f.hidden_field :location_id, :value => listing.location.id %>

  <%= submit_tag :submit%>
<% end %>
