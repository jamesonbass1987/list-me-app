<h1>Listings in <%= full_location_name(@location) %></h1>

<p>Currently viewing: <%= current_listing_filter(@listings, @location) %><p>

<!--  Listing Search Filter -->
<%= form_tag(location_listings_path(@location), :method => 'get', id: 'search-form') do %>
    <p>
      Search Listings:
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "Search", :name => nil %>
    </p>
<% end %>

<!--  Listing Category Filter -->
<%= form_tag '/search' do %>
    <p>
      View Listings For:
      <%= select_tag 'category_selector', options_from_collection_for_select(@categories, 'id', :name), :include_blank => 'Everything' %>
      <%= hidden_field_tag :location_selector, @location.id  %>
      <%= submit_tag "Filter" %>
    </p>
<% end %>

<%= link_to "Show me the best #{@location.city} has to offer.", "/locations/#{@location.id}/listings/take_my_money", :class => 'btn btn-primary' %>

<%= content_tag(:ul) do %>
  <%= listings_list(@listings) %>
<% end %>


<% if can? :create, Listing %>
<%= link_to("Create New Listing", new_location_listing_path(@location), :class => 'btn btn-primary') %>
<% end %>
