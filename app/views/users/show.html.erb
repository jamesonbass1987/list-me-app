<!-- User Heading -->
<%= tag.h1(display_user_heading(@user), :class => 'heading-text') %>
<%= image_tag @user.profile_image_url, :class => 'profile-image rounded-circle mx-auto d-block img-fluid' %>

<!-- User Information -->
<%= div_for(@user, :class => 'profile-text') do %>
  <%= tag.strong("Email:") %> <%= @user.email %><%= tag(:br) %>
  <%= tag.strong("Username:") %> <%= @user.username %><%= tag(:br) %>
  <%= tag.strong("Rating:") %> <%= display_user_rating(@user) %><%= tag(:br) %>
  <%= tag.strong(display_rating_dropdown(@user)) %>
<% end %>

<!-- User Listings -->
<%= tag.h3("#{@user.username}'s Listings:", :class => 'heading-text') %>

<%= content_tag :div, :class => 'row' do %>
  <%= render @user.listings %>
<% end %>

<!-- User Controls -->
<%= display_user_profile_tools(@user) %>
<%= display_admin_profile_tools(@user) %>
