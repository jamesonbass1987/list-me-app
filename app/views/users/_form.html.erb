<%= form_for user do |f| %>
  <%= render partial 'shared/error_messages', locals: {form_input: users} %>

  <%= f.label :email %>
  <%= f.text_field :email %><br>

  <%= f.label :first_name %>
  <%= f.text_field :first_name %><br>

  <%= f.label :last_name %>
  <%= f.text_field :last_name %><br>

  <%= f.label :username %>
  <%= f.text_field :username %><br>

  <%= f.label :password %>
  <%= f.password_field :password %><br>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %><br>

  <%= f.label :profile_image_url, "Profile Image URL" if @user.persisted? %>
  <%= f.text_field :profile_image_url if @user.persisted? %><br>

  <%= f.submit %>
<% end %>
