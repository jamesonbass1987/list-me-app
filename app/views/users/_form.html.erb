<%= form_for user do |f| %>
  <%= render partial: 'shared/error_messages', locals: {form_input: user} %>

  <%= f.label :email %>
  <%= f.text_field :email %><br>

  <%= f.label :first_name %>
  <%= f.text_field :first_name %><br>

  <%= f.label :last_name %>
  <%= f.text_field :last_name %><br>

  <%= f.label :username %>
  <%= f.text_field :username %><br>

  <%= f.label :password %>
  <%= f.password_field :password %><br>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %><br>

  <%= render_admin_field(user, f) %>

  <%= render_profile_image_field(user, f) %>

  <%= f.submit %>
<% end %>
