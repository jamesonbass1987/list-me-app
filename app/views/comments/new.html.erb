<%= render partial: 'comment', locals: {comment: @commentable} %>

<%= form_for [@commentable, @comment] do |f| %>
  <%= content_tag :div, :class => 'form-group' do %>
     <%= f.text_area :content, placeholder: "Add a Reply...", :class => 'form-control', required: true %>
  <% end %>
  <%= f.hidden_field :listing_id, :value => @listing.id %>
  <%= f.submit "Reply", :class => 'btn btn-outline-success btn-block'  %>
 <% end %>
