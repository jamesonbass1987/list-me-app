<h1 class="heading-text">Manage Categories</h1>

<%= content_tag(:ul) do %>
  <% @categories.each do |category| %>
    <%= content_tag :li do %>
      <%= category.name %> <%= link_to 'Edit', edit_category_path(category) %>
    <% end %>
  <% end %>
<% end %>

<%= link_to "Create New Category", new_category_path, :class => 'btn btn-outline-success btn-block' %>
