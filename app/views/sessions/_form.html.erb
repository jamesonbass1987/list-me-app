<%= form_for(user, url: login_path) do |f| %>
  <%= render partial: 'shared/error_messages', locals: {form_input: user} %>

  <%= f.label :username %>
  <%= f.text_field :username, :required => true%><br>

  <%= f.label :password %>
  <%= f.password_field :password, :required => true%><br>

  <%= submit_tag 'Sign In'%>

<% end %>
