

<%= form_tag "/search" do %>
  <h5>
    I'm looking for
    <%= select_tag 'category_selector', options_from_collection_for_select(@categories, 'id', :name), :include_blank => 'Everything' %>
    in
    <%= select_tag 'location_selector', options_from_collection_for_select(@locations, 'id', :full_location_name) %><br>
    <%= submit_tag "Show me what you've got.", :class => 'btn btn-outline-light btn-lg main_search_button' %>
  </h5>
<% end %>
