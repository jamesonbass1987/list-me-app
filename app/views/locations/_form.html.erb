<%= form_for(location) do |f| %>

  <%= render partial: 'shared/error_messages', locals: {form_input: location} %>

  <%= f.label :city %>
  <%= f.text_field :city %><br>

  <%= f.label :state, "State" %>
  <%= f.collection_select :state, State.all, :abbr, :abbr %><br>

  <%= submit_tag "Submit" %>

<% end %>
