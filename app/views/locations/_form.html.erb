<%= form_for(location) do |f| %>
  <%= form_errors_check(location) %>

  <%= content_tag :div, :class => 'form-group' do %>
    <%= f.label :city %>
    <%= f.text_field :city, :class => 'form-control' %>
  <% end %>

  <%= content_tag :div, :class => 'form-group' do %>
    <%= f.label :state, "State" %>
    <%= f.collection_select(:state, State.all, :abbr, :abbr, {}, {:class => 'form-control custom-select btn'}) %>
  <% end %>

  <%= f.submit :class => 'btn btn-outline-success btn-block' %>
<% end %>
