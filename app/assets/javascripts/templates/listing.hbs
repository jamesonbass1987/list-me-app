<div class="container-fluid">
    <!--  Listing Heading -->
    <h2 class="heading-text">{{title}}</h2>
    <text>{{locationCity}}, {{locationState}}</text> <br />

    <!-- Listing image carousel -->
    <div class="carousel img-responsive">
    <div class="carousel slide" id="listingCarousel" data-ride="carousel">
        <div class="carousel-inner">
        <div class="carousel-item active">
        <img class="d-block img-fluid carousel-img-height-dominant" src="{{primaryImage}}" />
    </div>
    {{#each listingImagesArray}}
        <div class="carousel-item">
            <img class="d-block img-fluid carousel-img-height-dominant" src="{{this}}" />
        </div>
    {{/each}}
    </div>    <div class="carousel-controls">
        <a class="carousel-control-prev carousel-buttons" role="button" data-slide="prev" href="#listingCarousel">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
    </a>      <a class="carousel-control-next carousel-buttons" role="button" data-slide="next" href="#listingCarousel">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
    </a></div></div></div>
    <!-- Listing Information-->
    <h3 class="heading-text">Description:</h3>
    <p>{{description}}</p>

    <strong>Price:</strong> <text>{{formattedPrice}}</text> <br>
    <strong>Category:</strong> <text>{{category}}</text> <br>
    <strong>Tags:</strong>
    <text>{{tags}}</text><br>
    <strong>Posted By:</strong> <text><a href="/users/{{username}}">{{username}}</a></text> <text>(5.0)</text><br />

    <!-- Listing Actions -->
    <a class="btn btn-outline-primary btn-block" href="mailto:{{userEmail}}">Contact Seller</a>

</div>